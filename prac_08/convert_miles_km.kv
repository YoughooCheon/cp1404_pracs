BoxLayout:
    orientation: 'vertical'
    padding: 20
    spacing: 20

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        TextInput:
            id: input_miles
            text: '0'
            font_size: 48
            multiline: False
            on_text: app.handle_calculate()

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            spacing: 10

            Button:
                text: 'Up'
                on_press: app.handle_increment(1)

            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

    Button:
        text: 'Convert miles to km'
        size_hint_y: 0.3
        on_press: app.handle_calculate()

    Label:
        text: app.output_km
        font_size: 48
        color: 1, 1, 0, 1