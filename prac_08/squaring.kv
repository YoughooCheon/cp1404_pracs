BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.7

        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False

        Button:
            text: 'Square'
            font_size: 32
            on_press: app.handle_calculate(input_number.text)

        Label:
            id: output_label
            text: ''
            font_size: 48
            color: (1, 0.4, 0.7, 1)

    Label:
        size_hint_y: 0.3
        text: 'Enter a number and press "Square".'
        font_size: 20
        halign: 'center'
        valign: 'middle'
        text_size: self.size